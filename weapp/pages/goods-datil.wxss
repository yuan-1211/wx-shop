.swiper {
  height: 720rpx;
}
.swiper image {
  height: 100%;
  width: 100%;
}
rich-text {
  font-size: 0;
}
.forsell {
  border-top: 10px solid #f5f5f5;
  border-bottom: 10px solid #f5f5f5;
  font-size: 24rpx;
  padding: 0 10rpx;
}
.forsell > view {
  line-height: 80rpx;
}
.forsell > view text:nth-child(1) {
  margin-right: 20rpx;
}
.forsell > view text:nth-child(2) {
  color: #666;
}
.goods-price {
  height: 60rpx;
  color: #ff2d4a;
  font-size: 20px;
  padding: 0 20rpx;
}
.goods-title {
  display: flex;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
}
.goods-title .right-icon {
  width: 150rpx;
  font-size: 30rpx;
  color: #9e9d9e;
  border-left: 1px solid #eee;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.goods-title .left-title {
  flex: 1;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.express {
  font-size: 24rpx;
  color: #9e9d9e;
  padding: 20rpx;
}
.goods-detail {
  padding-bottom: 50px;
}
.van-tabs {
  z-index: 0;
}

