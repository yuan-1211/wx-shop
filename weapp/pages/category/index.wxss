.category-body {
  display: flex;
  position: absolute;
  top: 100rpx;
  bottom: 0;
}
.category-body .body-left {
  width: 200rpx;
  flex-shrink: 0;
  height: 100%;
  overflow: auto;
}
.category-body .body-left .body-left-item {
  line-height: 100rpx;
  text-align: center;
  font-size: 16px;
  background-color: #f5f5f5;
  position: relative;
}
.category-body .body-left .active {
  background-color: #fff;
  color: #ff2d4a;
}
.category-body .body-left .active::before {
  content: '';
  display: block;
  width: 4px;
  height: 60rpx;
  position: absolute;
  top: 20rpx;
  background: #ff2d4a;
}
.category-body .body-right {
  flex: 1;
  height: 100%;
  overflow: auto;
}
.category-body .body-right .body-right-item {
  width: 550rpx;
}
.category-body .body-right .right-item-title {
  line-height: 2;
  text-align: center;
  font-size: 16px;
}
.category-body .body-right .right-item-list {
  display: flex;
  flex-wrap: wrap;
}
.category-body .body-right .right-item-list .right-item-brand {
  width: 33.33%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.category-body .body-right .right-item-list .right-item-brand image {
  width: 100%;
  height: 100rpx;
}
.category-body .body-right .right-item-list .right-item-brand .brand-title {
  text-align: center;
  font-size: 14px;
}

